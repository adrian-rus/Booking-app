
<%= form_for([@zone, @booking], html: {class: "form-horizontal"}) do |f| %>

  <div class="form-group form-inline">
    <%= f.label 'start_time', 'Start time', class:'col-sm-2 control-label'%>
    <div class="col-sm-10">
       <%= f.datetime_select :start_time, { minute_step: 15 }, class:'form-control' %>
    </div>
  </div>
    
  <div class="form-group">
    <%= f.label 'duration', 'Length of booking in hours', class:'col-sm-2 control-label' %>
    <div class="col-sm-8">
       <%= f.number_field 'duration', min: 1, class:'form-control' %> 
    </div>
  </div>
  
  <div class="col-sm-offset-2 col-sm-10">
    <label>
    <%= check_box_tag 'booking[biggroup]', 'biggroup' %>
    Big group? (20+) Click here. 
    </label>
  </div>
  
  <div class="col-sm-offset-2 col-sm-10">
    <label>
    <%= check_box_tag 'booking[vip]', 'vip' %>
    VIP treatment? Tick here.
    </label>
  </div>
  
  <div class="col-sm-offset-2 col-sm-10">
    <label>
    <%= check_box_tag 'booking[extravr]', 'extravr' %>
    Need extra VR controllers?
    </label>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>
<% end %> 
