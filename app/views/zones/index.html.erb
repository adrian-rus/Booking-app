<p id="notice"><%= notice %></p>

<h1>Listing Zones</h1>

<table class="table table-responsive table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zones.each do |zone| %>
      <tr>
        <td><%= zone.name %></td>
        <td><%= zone.description %></td>
        <td><%= link_to 'Show All Bookings', zone_bookings_path(zone), class: 'btn btn-info' %></td>
        <td><%= link_to "Add booking", new_zone_booking_path(zone), class: 'btn btn-success' %></td>
        
        <% if current_user.admin? %>
        <td><%= link_to 'New Zone', new_zone_path, class: 'btn bg-success' %></td>
        <td><%= link_to 'Edit Zone', edit_zone_path(zone), class:'btn btn-warning' %></td>
        <td><%= link_to 'Delete Zone', zone, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


